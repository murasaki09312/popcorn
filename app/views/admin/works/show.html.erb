<div class="min-h-screen bg-black text-zinc-100">
  <div class="mx-auto max-w-4xl space-y-6 px-6 py-8">
    <header class="flex flex-wrap items-start justify-between gap-3 border-b border-zinc-800 pb-4">
      <div>
        <p class="text-xs uppercase tracking-[0.2em] text-zinc-500">Admin</p>
        <h1 class="mt-1 text-2xl font-bold tracking-wide"><%= @work.title %></h1>
      </div>
      <div class="flex items-center gap-2">
        <%= link_to "一覧へ戻る", admin_works_path, class: "inline-flex items-center rounded-md border border-zinc-700 px-4 py-2 text-sm font-medium text-zinc-200 transition hover:bg-zinc-800" %>
        <%= link_to "編集", edit_admin_work_path(@work), class: "inline-flex items-center rounded-md bg-zinc-100 px-4 py-2 text-sm font-semibold text-zinc-900 transition hover:bg-white" %>
      </div>
    </header>

    <% if notice.present? %>
      <p class="rounded-md border border-emerald-500/40 bg-emerald-500/10 px-4 py-2 text-sm text-emerald-200"><%= notice %></p>
    <% end %>

    <section class="grid gap-6 rounded-xl border border-zinc-800 bg-zinc-950 p-6 md:grid-cols-2">
      <div class="space-y-4">
        <h2 class="text-sm font-medium uppercase tracking-wide text-zinc-400">Thumbnail</h2>
        <% if @work.thumbnail.attached? %>
          <%= image_tag @work.thumbnail, class: "aspect-video w-full rounded-lg object-cover" %>
        <% else %>
          <div class="flex aspect-video items-center justify-center rounded-lg border border-dashed border-zinc-700 bg-zinc-900 text-sm text-zinc-500">
            サムネイル未設定
          </div>
        <% end %>
      </div>

      <dl class="space-y-4 text-sm">
        <div>
          <dt class="text-zinc-400">Title</dt>
          <dd class="mt-1 text-zinc-100"><%= @work.title %></dd>
        </div>
        <div>
          <dt class="text-zinc-400">Video URL</dt>
          <dd class="mt-1 break-all text-zinc-200">
            <% if @work.video_url.present? %>
              <a href="<%= @work.video_url %>" target="_blank" rel="noopener noreferrer" class="underline decoration-zinc-500 hover:text-white"><%= @work.video_url %></a>
            <% else %>
              -
            <% end %>
          </dd>
        </div>
        <div>
          <dt class="text-zinc-400">Tags</dt>
          <dd class="mt-1 text-zinc-200"><%= @work.tags.presence || "-" %></dd>
        </div>
        <div>
          <dt class="text-zinc-400">Description</dt>
          <dd class="mt-1 whitespace-pre-wrap leading-relaxed text-zinc-200"><%= @work.description.presence || "-" %></dd>
        </div>
      </dl>
    </section>
  </div>
</div>
