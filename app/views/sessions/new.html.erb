<div class="flex min-h-screen items-center justify-center bg-black px-6 py-12 text-zinc-100">
  <section class="w-full max-w-md rounded-2xl border border-zinc-800 bg-zinc-950 p-8 shadow-xl shadow-black/50">
    <h1 class="text-2xl font-semibold tracking-wide">Admin Sign In</h1>
    <p class="mt-2 text-sm text-zinc-400">管理画面へログインしてください。</p>

    <% if flash[:alert].present? %>
      <p class="mt-4 rounded-md border border-rose-400/40 bg-rose-500/10 px-3 py-2 text-sm text-rose-200"><%= flash[:alert] %></p>
    <% end %>

    <% if flash[:notice].present? %>
      <p class="mt-4 rounded-md border border-emerald-400/40 bg-emerald-500/10 px-3 py-2 text-sm text-emerald-200"><%= flash[:notice] %></p>
    <% end %>

    <%= form_with url: session_path, class: "mt-6 space-y-5" do |form| %>
      <div class="space-y-2">
        <%= form.label :email_address, "Email address", class: "block text-sm font-medium text-zinc-200" %>
        <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "admin@example.com", value: params[:email_address], class: "w-full rounded-md border border-zinc-700 bg-zinc-900 px-3 py-2 text-zinc-100 placeholder:text-zinc-500 focus:border-zinc-400 focus:outline-none focus:ring-2 focus:ring-zinc-600" %>
      </div>

      <div class="space-y-2">
        <%= form.label :password, "Password", class: "block text-sm font-medium text-zinc-200" %>
        <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "password", maxlength: 72, class: "w-full rounded-md border border-zinc-700 bg-zinc-900 px-3 py-2 text-zinc-100 placeholder:text-zinc-500 focus:border-zinc-400 focus:outline-none focus:ring-2 focus:ring-zinc-600" %>
      </div>

      <%= form.submit "Sign in", class: "inline-flex w-full justify-center rounded-md bg-zinc-100 px-4 py-2 text-sm font-semibold text-black transition hover:bg-white" %>
    <% end %>

    <div class="mt-5 text-right text-sm">
      <%= link_to "Forgot password?", new_password_path, class: "text-zinc-400 transition hover:text-zinc-200" %>
    </div>
  </section>
</div>
