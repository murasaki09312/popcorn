# See https://help.github.com/articles/ignoring-files for more about ignoring files.

# Ignore bundler config and installed gems
/.bundle
/vendor/bundle

# Ignore local gem bootstrap directory used during setup
/.gem

# Ignore all environment files (except templates)
/.env*
!.env.example

# Keep credentials encrypted file in repo but never commit master key
/config/master.key

# Ignore node modules
/node_modules

# Ignore generated asset builds (keep directory)
/app/assets/builds/*
!/app/assets/builds/.keep

# Ignore log files
/log/*
!/log/.keep

# Ignore pidfiles and caches
/tmp/*
!/tmp/.keep
/tmp/pids/*
!/tmp/pids/
!/tmp/pids/.keep

# Ignore storage generated by Active Storage
/storage/*
!/storage/.keep
/tmp/storage/*
!/tmp/storage/
!/tmp/storage/.keep

# Ignore uploaded files in development
/public/uploads

# Ignore SQLite database files
/db/*.sqlite3
/db/*.sqlite3-*

# Ignore yarn/npm caches
/.yarn/*
!/package-lock.json
